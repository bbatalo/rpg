<?xml version="1.0" encoding="ASCII"?>
<rpg:RPG xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:rpg="rpg"
    xsi:schemaLocation="rpg rpg.ecore"
    name="World of Warcraft"
    lore="Enter the world... of Warcraft!">
  <allClasses
      name="Character"
      lore="No lore, generic class."
      description="A class to model any character in the game. Should be inherited for further customization"
      childClasses="//@allClasses.1 //@allClasses.3">
    <statistics
        name="Health"
        lore="Every living being is... living. Until it is not."
        description="The amount of damage a character can sustain before dying."
        tooltip="You can sustain this much damage until you die."
        maxValue="999999.0"/>
    <statistics
        name="Level"
        lore="Epic levels of awesomeness."
        description="An indicator of the strenght of the character."
        tooltip="You are this level."
        maxValue="10.0"
        startLimitValue="10.0"/>
    <statistics
        name="Experience"
        lore="Are you a wise one?"
        description="The amount of experience that a character has. Reaching the limit value will result in a level up."
        maxValue="10000.0"
        startLimitValue="1000.0"/>
    <branches
        name="Basic Abiilities"
        lore="No lore, generic branch."
        description="Abilites that all characters posses. Serves as a base functional branch."
        branchType="ABILITY"
        tooltip="Basic abilities.">
      <nodes
          name="Level up"
          lore=""
          tooltip="Gives you the ability to level up!"
          description="Contains the ability to level up a character."
          nodeType="STANDALONE"
          activationLevel="1">
        <abilities
            name="Level up"
            lore="Experience is key to growth."
            tooltip="Level up! Will increase your level and move experience limit to set you up for progress."
            rangeUnit="//@rangeUnits.0"
            onLevel="1">
          <effects
              name="Level up!"
              tooltip="Raises your level by 1. Moves experience limit by 1000."
              onLevel="1">
            <statChange
                baseValue="1.0"
                changesStatistic="//@allClasses.0/@statistics.1"/>
            <statChange
                baseValue="1000.0"
                changesStatistic="//@allClasses.0/@statistics.2"/>
          </effects>
        </abilities>
      </nodes>
    </branches>
  </allClasses>
  <allClasses
      name="Playable"
      description="A generic class for playable characters"
      childClasses="//@allClasses.2"
      parentClasses="//@allClasses.0"
      isPlayable="true">
    <statistics
        name="Talent points"
        description="Usable for unlocking different talents."
        tooltip="Use these points to unlock talents. One point unlocks one level of a node."
        maxValue="999.0"
        startLimitValue="10.0"
        statType="FUEL"/>
    <statistics
        name="Skill points"
        maxValue="99.0"
        startLimitValue="99.0"/>
    <statistics
        name="Critical chance"
        description="Indicates a chance for an ability to critically hit"
        tooltip="Indicates a chance for an ability to critically hit"
        minValue="0.0"
        maxValue="100.0"
        startLimitValue="100.0"/>
  </allClasses>
  <allClasses
      name="Mage"
      lore="A magical caster, wielder of the arcane arts."
      description="Ranged playable character. Can cast damaging spells and summon magical minions."
      parentClasses="//@allClasses.1"
      isPlayable="true">
    <statistics
        name="Mana"
        lore="A mystical energy used by mages. Infused and transformed to unleash a spell."
        description="Used to fuel mage abilities."
        tooltip="For use in abilities."
        maxValue="10000.0"
        startLimitValue="1000.0"/>
    <statistics
        name="Spell power"
        description="Spell power"
        tooltip="Spell power"
        maxValue="100.0"/>
    <branches
        name="Fire Specialization"
        lore="Fire Abilities"
        description="Fire Abilities"
        branchType="ABILITY"
        tooltip="Fire Abilities">
      <nodes
          name="Fireball"
          tooltip="Fireball"
          description="Fireball"
          nodeType="ROOT"
          childNodes="//@allClasses.2/@branches.0/@nodes.1 //@allClasses.2/@branches.0/@nodes.2"
          minActivationLevel="0"
          maxActivationLevel="3"
          activationLevel="1">
        <activation
            level="2">
          <costs
              cost="1.0"
              statistic="//@allClasses.1/@statistics.1"/>
        </activation>
        <activation
            level="3">
          <costs
              cost="3.0"
              statistic="//@allClasses.1/@statistics.1"/>
        </activation>
        <abilities
            name="Fireball"
            lore="Casts a fireball, damaging a single enemy."
            tooltip="Casts a fireball, damaging a single enemy."
            castType="CAST"
            castTime="2.0"
            range="40.0"
            rangeUnit="//@rangeUnits.0"
            onLevel="1">
          <effects
              name="Consume mana"
              tooltip="Drains mana"
              effectType="ACTIVE"
              onLevel="1">
            <statChange
                changeType="SUBSTRACT"
                baseValue="4.0"
                changeValueType="PERCENTAGE"
                changesStatistic="//@allClasses.2/@statistics.0">
              <modifiers
                  changeType="MULTIPLY"
                  value="0.9"
                  basedOnModifier="MULTIPLY"
                  priorityOrder="1"
                  onLevel="2"/>
            </statChange>
          </effects>
          <effects
              name="Fire damage"
              tooltip="Damages an enemy with fire damage"
              effectType="ACTIVE"
              targetType="SINGLE"
              onLevel="1">
            <statChange
                changeType="SUBSTRACT"
                baseValue="20.0"
                changesStatistic="//@allClasses.0/@statistics.0">
              <modifiers
                  changeType="MULTIPLY"
                  value="2.0"
                  priorityOrder="1">
                <randomizer
                    basedOn="//@allClasses.1/@statistics.2"/>
              </modifiers>
            </statChange>
          </effects>
          <effects
              name="Enhanced pyrotechnics"
              tooltip="Stacks critical chance until third consecutive Fireball cast"
              onLevel="3"/>
        </abilities>
      </nodes>
      <nodes
          name="Pyroblast"
          tooltip="Hurls a large boulder of fire at the enemy."
          description="Hurls a large boulder of fire at the enemy."
          childNodes="//@allClasses.2/@branches.0/@nodes.3"
          parentNodes="//@allClasses.2/@branches.0/@nodes.0"
          maxActivationLevel="2">
        <activation
            level="1">
          <costs
              cost="1.0"
              statistic="//@allClasses.1/@statistics.1"/>
        </activation>
        <activation
            level="2">
          <costs
              cost="3.0"
              statistic="//@allClasses.1/@statistics.1"/>
        </activation>
        <abilities
            name="Pyroblast"
            lore="Pyroblast"
            tooltip="Pyroblast"
            castType="CAST"
            castTime="6.0"
            range="35.0"
            rangeUnit="//@rangeUnits.0"
            onLevel="1">
          <effects
              name="Consume mana"
              tooltip="Consumes mana"
              effectType="ACTIVE"
              onLevel="1">
            <statChange
                changeType="SUBSTRACT"
                baseValue="50.0"
                changesStatistic="//@allClasses.2/@statistics.0"/>
          </effects>
          <effects
              name="Massive fire damage"
              tooltip="Deals massive fire damage to a single target"
              effectType="ACTIVE"
              targetType="SINGLE"
              onLevel="1">
            <statChange
                changeType="SUBSTRACT"
                baseValue="100.0"
                changesStatistic="//@allClasses.0/@statistics.0"/>
          </effects>
        </abilities>
      </nodes>
      <nodes
          name="Scorch"
          tooltip="Scorch"
          description="Scorch"
          childNodes="//@allClasses.2/@branches.0/@nodes.3"
          parentNodes="//@allClasses.2/@branches.0/@nodes.0"
          maxActivationLevel="3">
        <activation
            level="1">
          <costs
              cost="1.0"
              statistic="//@allClasses.1/@statistics.0"/>
        </activation>
        <activation
            level="2">
          <costs
              cost="3.0"
              statistic="//@allClasses.1/@statistics.0"/>
        </activation>
        <activation
            level="3">
          <costs
              cost="5.0"
              statistic="//@allClasses.1/@statistics.0"/>
        </activation>
        <abilities
            name="Scorch"
            lore="Scorch"
            tooltip="Scorch"
            castType="CAST"
            castTime="1.0"
            range="45.0"
            rangeUnit="//@rangeUnits.0"
            onLevel="1">
          <effects
              name="Consume mana"
              tooltip="Consumes mana"
              effectType="ACTIVE"
              onLevel="1">
            <statChange
                changeType="SUBSTRACT"
                baseValue="5.0"
                changesStatistic="//@allClasses.2/@statistics.0"/>
          </effects>
          <effects
              name="Tiny fire damage"
              tooltip="Deals tiny amounts of fire damage"
              effectType="ACTIVE"
              targetType="SINGLE"
              onLevel="1">
            <statChange
                changeType="SUBSTRACT"
                baseValue="10.0"
                changesStatistic="//@allClasses.0/@statistics.0"/>
          </effects>
        </abilities>
      </nodes>
      <nodes
          name="Fire Blast"
          tooltip="Instantly blasts the target with a burst of fire"
          description="Instantly blasts the target with a burst of fire"
          childNodes="//@allClasses.2/@branches.0/@nodes.5 //@allClasses.2/@branches.0/@nodes.4"
          parentNodes="//@allClasses.2/@branches.0/@nodes.1 //@allClasses.2/@branches.0/@nodes.2">
        <activation
            level="1">
          <costs
              cost="5.0"
              statistic="//@allClasses.1/@statistics.1"/>
        </activation>
        <abilities
            name="Fire Blast"
            lore="Instantly blasts the target with a burst of fire"
            tooltip="Instantly blasts the target with a burst of fire"
            castType="INSTANT"
            range="25.0"
            rangeUnit="//@rangeUnits.0"
            onLevel="1">
          <effects
              name="Consume mana"
              tooltip="Consumes mana"
              effectType="ACTIVE"
              onLevel="1">
            <statChange
                changeType="SUBSTRACT"
                baseValue="15.0"
                changesStatistic="//@allClasses.2/@statistics.0"/>
          </effects>
          <effects
              name="Instant fire damage"
              tooltip="Instant fire damage"
              effectType="ACTIVE"
              targetType="SINGLE"
              onLevel="1">
            <statChange
                changeType="SUBSTRACT"
                baseValue="25.0"
                changesStatistic="//@allClasses.0/@statistics.0"/>
          </effects>
        </abilities>
      </nodes>
      <nodes
          name="Flamestrike"
          tooltip="Conjures a field of fire"
          description="Conjures a field of fire"
          childNodes="//@allClasses.2/@branches.0/@nodes.6"
          parentNodes="//@allClasses.2/@branches.0/@nodes.3"
          maxActivationLevel="2">
        <activation
            level="1">
          <costs
              cost="3.0"
              statistic="//@allClasses.1/@statistics.1"/>
        </activation>
        <activation
            level="2">
          <costs
              cost="5.0"
              statistic="//@allClasses.1/@statistics.1"/>
        </activation>
        <abilities
            name="Flamestrike"
            lore="Flamestrike"
            tooltip="Flamestrike"
            castType="CAST"
            abilityType="AOE"
            castTime="5.0"
            range="35.0"
            rangeUnit="//@rangeUnits.0"
            onLevel="1">
          <effects
              name="Consume mana"
              tooltip="Consume mana"
              effectType="ACTIVE"
              onLevel="1">
            <statChange
                changeType="SUBSTRACT"
                baseValue="20.0"
                changesStatistic="//@allClasses.2/@statistics.0"/>
          </effects>
          <effects
              name="AOE Fire damage"
              tooltip="Deals fire damage to multiple enemies"
              effectType="ACTIVE"
              targetType="MULTIPLE"
              onLevel="1">
            <statChange
                changeType="SUBSTRACT"
                baseValue="15.0"
                changesStatistic="//@allClasses.0/@statistics.0"/>
          </effects>
        </abilities>
      </nodes>
      <nodes
          name="Dragon Breath"
          tooltip="Breathes fire in a cone forward"
          description="Breathes fire in a cone forward"
          childNodes="//@allClasses.2/@branches.0/@nodes.6"
          parentNodes="//@allClasses.2/@branches.0/@nodes.3">
        <activation
            level="1">
          <costs
              cost="5.0"
              statistic="//@allClasses.1/@statistics.1"/>
        </activation>
        <abilities
            name="Dragon Breath"
            lore=""
            tooltip="Breathes fire in a cone forward"
            castType="INSTANT"
            abilityType="AOE"
            range="10.0"
            rangeUnit="//@rangeUnits.0"
            onLevel="1">
          <effects
              name="Consume mana"
              tooltip="Consumes mana"
              effectType="ACTIVE"
              onLevel="1">
            <statChange
                changeType="SUBSTRACT"
                baseValue="20.0"
                changesStatistic="//@allClasses.2/@statistics.0"/>
          </effects>
          <effects
              name="Cone fire damage"
              tooltip="Deals fire damage in a cone"
              effectType="ACTIVE"
              targetType="MULTIPLE"
              onLevel="1">
            <statChange
                changeType="SUBSTRACT"
                baseValue="20.0"
                changesStatistic="//@allClasses.0/@statistics.0"/>
          </effects>
        </abilities>
      </nodes>
      <nodes
          name="Fire Elemental"
          tooltip="Summons a Fire Elemental to serve the caster's bidding"
          description="Summons a Fire Elemental to serve the caster's bidding"
          parentNodes="//@allClasses.2/@branches.0/@nodes.5 //@allClasses.2/@branches.0/@nodes.4">
        <activation
            level="1">
          <costs
              cost="10.0"
              statistic="//@allClasses.1/@statistics.1"/>
        </activation>
        <abilities
            name="Summon Fire Elemental"
            lore="Summons a fire elemental to fight for you"
            tooltip="Summons a fire elemental to fight for you"
            castType="CAST"
            castTime="5.0"
            range="5.0"
            rangeUnit="//@rangeUnits.0"
            onLevel="1">
          <effects
              name="Consume mana"
              tooltip="Consumes mana"
              effectType="ACTIVE"
              onLevel="1">
            <statChange
                changeType="SUBSTRACT"
                baseValue="30.0"
                changesStatistic="//@allClasses.2/@statistics.0"/>
          </effects>
          <effects
              name="Summon Fire Elemental"
              tooltip="Summons a fire elemental to do the player's bidding"
              effectType="INSTANTIATE"
              onLevel="1"
              instantiate="//@allClasses.3"/>
        </abilities>
      </nodes>
      <nodes
          name="Critical Mass"
          tooltip="Increases your critical chance "
          description="Increases your critical chance for fire spells"
          nodeType="STANDALONE">
        <activation
            level="1">
          <requirements
              requiredLevel="1"
              followsActivationOf="//@allClasses.2/@branches.0/@nodes.3"/>
        </activation>
        <abilities>
          <effects
              name="Increases critical chance"/>
        </abilities>
      </nodes>
      <nodes
          name="Hot Streak"
          tooltip="After two critical strikes, next Fireball or Pyroblast is instant cast"
          description="After two critical strikes, next Fireball or Pyroblast is instant cast"
          nodeType="STANDALONE">
        <activation/>
        <abilities/>
      </nodes>
    </branches>
  </allClasses>
  <allClasses
      name="Player's Fire Elemental"
      parentClasses="//@allClasses.0"/>
  <rangeUnits
      name="Yard"
      description="One unit of in-game range is equal to one yard."/>
</rpg:RPG>
