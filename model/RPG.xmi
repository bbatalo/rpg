<?xml version="1.0" encoding="ASCII"?>
<rpg_meta:RPG
    xmi:version="2.0"
    xmlns:xmi="http://www.omg.org/XMI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:rpg_meta="rpg_meta"
    xsi:schemaLocation="rpg_meta rpg.ecore"
    name="Dubious DOOB"
    lore="Follow the adventures of the ERP team in order to survive the great invasion from Dubai.">
  <allClasses
      name="Character"
      lore=""
      statistics="//@allStatistics.0 //@allStatistics.1"
      description="All playable characters in the game."
      childClasses="//@allClasses.1 //@allClasses.2 //@allClasses.3">
    <branches
        name="Character Ability Branch"
        description="Abilities"
        branchType="ABILITY"
        tooltip="Abilities">
      <startNodes
          name="Sign into DoobTimer"
          tooltip="Clock yourself in!"
          description="Signs you into DoobTimer, making sure you are at your workplace in a timely fashion"
          nodeType="ROOT"
          maxActivationLevel="3"
          activationLevel="1"
          isActivated="true">
        <activation
            xsi:type="rpg_meta:NodeActivationBuy"
            text="Level 2 Activation"
            level="2">
          <costs
              cost="20.0"
              statistic="//@allStatistics.3"/>
        </activation>
        <activation
            xsi:type="rpg_meta:NodeActivationBuy"
            text="Level 3 Activation"
            level="3">
          <costs
              cost="30.0"
              statistic="//@allStatistics.3"/>
        </activation>
      </startNodes>
    </branches>
  </allClasses>
  <allClasses
      name="Programmer"
      lore=""
      statistics="//@allStatistics.3"
      description="Solves development-related tasks. Some complex, other not so much."
      parentClasses="//@allClasses.0">
    <branches
        name="Programmer Ability Branch"
        description="Abilities"
        branchType="ABILITY"
        tooltip="Abilities">
      <startNodes
          name="Code"
          tooltip="Code a bit on a standard project."
          description="The programmer codes on an assigned project."
          nodeType="ROOT"
          maxActivationLevel="3"
          activationLevel="1"
          isActivated="true">
        <activation
            xsi:type="rpg_meta:NodeActivationBuy"
            text="Level 2 Activation"
            level="2">
          <costs
              cost="10.0"
              statistic="//@allStatistics.4"/>
        </activation>
        <activation
            xsi:type="rpg_meta:NodeActivationBuy"
            text="Level 3 Activation"
            level="3">
          <costs
              statistic="//@allStatistics.4"/>
        </activation>
      </startNodes>
      <startNodes
          name="Report a Bug"
          tooltip="Reports a bug"
          description="Reports a bug"
          nodeType="ROOT">
        <activation
            xsi:type="rpg_meta:NodeActivationPropagate"
            text="Level 1 Activation"
            isAuto="true"
            level="1"
            followsActivationOf="//@allClasses.1/@branches.0/@startNodes.0"
            requiredLevel="2"/>
      </startNodes>
    </branches>
  </allClasses>
  <allClasses
      name="Designer"
      description="Designs user interfaces and MPCE pamflets. Because why not."
      parentClasses="//@allClasses.0">
    <branches
        name="Designer Ability Branch"
        description="Abilities"
        branchType="ABILITY"
        tooltip="Abilities">
      <startNodes
          name="Design"
          lore=""
          tooltip="Design an UI item."
          description="The designer designs an item of a user interface on an assigned project."
          nodeType="ROOT"
          activationLevel="1"
          isActivated="true"/>
    </branches>
  </allClasses>
  <allClasses
      name="Animator"
      description="Animates 3D models. Does not sleep."
      parentClasses="//@allClasses.0">
    <branches
        name="Animator Abilities Branch"
        description="Abilities"
        branchType="ABILITY"
        tooltip="Abilities">
      <startNodes
          name="Animate"
          tooltip="Animate a 3D model"
          description="The animator animates a 3D model on an assigned project."
          nodeType="ROOT"
          activationLevel="1"
          isActivated="true"/>
    </branches>
  </allClasses>
  <allStatistics
      name="Health"
      lore=""
      description="The amount of damage a character can sustain before dying."
      tooltip="Amount of current health."
      minValue="1.0"
      maxValue="25000.0"
      startLimitValue="150.0"/>
  <allStatistics
      name="Level"
      description="The amout of progress a character has reached."
      tooltip="Shows how much a character has progressed along the leveling path."
      minValue="1.0"
      maxValue="80.0"
      startLimitValue="1.0"/>
  <allStatistics
      name="Experience"
      description="Amount of experience a player has."
      tooltip="Amount of experience a player has"
      maxValue="10000.0"
      startLimitValue="100.0"/>
  <allStatistics
      name="ERP Coin"
      description="psudhgpuaierg"
      tooltip="Primary resource for unlocking programmer abilities."
      maxValue="100.0"
      startLimitValue="100.0"/>
  <allStatistics
      name="Janko Coin"
      description="Coins that Janko gives out"
      tooltip="Coins that Janko gives out"
      maxValue="100.0"
      startLimitValue="100.0"/>
  <allStatistics
      name="Programming Task"
      description="Programming Task"
      tooltip="Programming Task"
      maxValue="999.0"
      startLimitValue="5.0"/>
  <allStatistics
      name="Reported Bug"
      description="Reported Bug"
      tooltip="Reported Bug"
      maxValue="999.0"
      startLimitValue="10.0"/>
</rpg_meta:RPG>
